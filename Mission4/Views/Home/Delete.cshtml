@{
    ViewData["Title"] = "Delete Movie";
}
@model Movies
<div class="text-center">
    <h1>Delete @Model.Title</h1>
    <form method="post" asp-action="Delete">
        <input asp-for="MovieId" type="hidden" />
        <button class="btn btn-secondary btn-large" type="submit">Delete</button>
        <br />
        <br />
        <a asp-controller="Home" asp-action="AllMovies" class="btn btn-large btn-primary">Cancel</a>
    </form>
</div>